{
  "name": "dconf",
  "version": "0.1.0",
  "description": "Decentralized configuration management",
  "scripts": {
    "build": "parcel build src/dconf_assets/index.html",
    "prebuild": "npm run copy:types && npm run inject-env",
    "start": "parcel src/dconf_assets/index.html",
    "prestart": "npm run copy:types && npm run inject-env",
    "copy:types": "rsync -avr .dfx/$(echo ${DFX_NETWORK:-'**'})/canisters/** --exclude='assets/' --exclude='idl/' --exclude='*.wasm' --exclude='*.most' --delete src/declarations",
    "inject-env": "node ./inject-env"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@dfinity/agent": "0.12.0",
    "@dfinity/candid": "0.12.0",
    "@dfinity/principal": "0.12.0",
    "@parcel/transformer-sass": "^2.7.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "parcel": "^2.7.0"
  },
  "engines": {
    "node": "^12 || ^14 || ^16 || ^18"
  },
  "browserslist": [
    "last 2 chrome version",
    "last 2 firefox version",
    "last 2 safari version",
    "last 2 edge version"
  ],
  "dependencies": {
    "bulma": "^0.9.4",
    "date-fns": "^2.29.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-modal": "^3.15.1",
    "react-router-dom": "^6.3.0"
  }
}
